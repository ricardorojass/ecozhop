{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": [
      "ES2017",
      "ESNext.AsyncIterable",
      "DOM"
    ],
    "declaration": false,
    "allowJs": true,
    "jsx": "react",
    "outDir": "./dist/",
    "strict": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": [
    "/node_modules/**/*",
  ]
}
